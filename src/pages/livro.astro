---
import MainGridLayout from "../layouts/MainGridLayout.astro";
import Livros from "../content/spec/livro.astro";
---

<head>
  <meta charset="UTF-8" />

  <!-- Meta Tags Essenciais -->
  <title>Baixe Meu Livro de Contos Eróticos Gratuitamente</title>
  <meta
    name="description"
    content="Leve minhas histórias eróticas com você! Baixe meu livro gratuitamente e aproveite sem limites. Se gostou, considere apoiar meu trabalho."
  />
  <meta
    name="keywords"
    content="contos eróticos, livro grátis, download EPUB, histórias sensuais, literatura adulta, apoio escritor"
  />
  <meta name="author" content="Feminive Fanfics" />
  <meta name="robots" content="index, follow" />

  <!-- Open Graph (Facebook, WhatsApp, etc.) -->
  <meta
    property="og:title"
    content="Baixe Meu Livro de Contos Eróticos Gratuitamente"
  />
  <meta
    property="og:description"
    content="Minhas histórias favoritas em um livro que você pode baixar de graça. Mergulhe em novas fantasias e, se puder, apoie meu trabalho!"
  />
  <meta
    property="og:image"
    content="https://www.feminivefanfics.com.br/outros/promo.png"
  />
  <meta property="og:url" content="https://www.feminivefanfics.com.br/livro/" />
  <meta property="og:type" content="book" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta
    name="twitter:title"
    content="Baixe Meu Livro de Contos Eróticos Gratuitamente"
  />
  <meta
    name="twitter:description"
    content="Minhas histórias favoritas reunidas em um livro digital. Baixe grátis e aproveite sem limites!"
  />
  <meta
    name="twitter:image"
    content="https://www.feminivefanfics.com.br/outros/promo.png"
  />
  <meta
    name="twitter:url"
    content="https://www.feminivefanfics.com.br/livro/"
  />
</head>

<MainGridLayout>
  <div class="card-base">
    <Livros />
  </div>
</MainGridLayout>
